generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Team {
  id        String   @id @default(uuid())
  name      String   @unique // Alpha, Bravo, Charlie, Delta
  color     String // Hex Code
  score     Int      @default(0)
  nodes     Node[]
  auditLogs AuditLog[]
}

model Node {
  id              String   @id @default(uuid())
  name            String
  x               Float // 0-100%
  y               Float // 0-100%
  type            String // MEAT, VEGETABLE, AMMO
  controlledById  String?
  controlledBy    Team?    @relation(fields: [controlledById], references: [id])
  lastHarvestedAt DateTime @default(now())
  captureRate     Int      @default(10) // Resource amount per minute
}

model AuditLog {
  id        String   @id @default(uuid())
  message   String
  createdAt DateTime @default(now())
  teamId    String?
  team      Team?    @relation(fields: [teamId], references: [id])
}
