generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Team {
  id        String     @id @default(uuid())
  name      String     @unique
  color     String
  score     Int        @default(0)
  nodes     Node[]
  auditLogs AuditLog[]
  resources TeamResource[]
}

model TeamResource {
  id        String   @id @default(uuid())
  teamId    String
  team      Team     @relation(fields: [teamId], references: [id])
  type      String
  amount    Int      @default(0)

  @@unique([teamId, type])
}

model Node {
  id              String   @id @default(uuid())
  name            String
  x               Float
  y               Float
  type            String
  controlledById  String?
  controlledBy    Team?    @relation(fields: [controlledById], references: [id])
  lastHarvestedAt DateTime @default(now())
  captureRate     Int      @default(10)
  // ここが追加された重要な項目です
  secretKey       String   @default(uuid()) 
}

model AuditLog {
  id        String   @id @default(uuid())
  message   String
  createdAt DateTime @default(now())
  teamId    String?
  team      Team?    @relation(fields: [teamId], references: [id])
}

model GameSettings {
  id           String  @id @default(uuid())
  isGameActive Boolean @default(false)
}